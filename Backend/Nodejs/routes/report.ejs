<html>
<head>
  <style>
    table{
      font-family: 'poppins';
      border: 1px solid #f5473424;
      border-collapse: collapse;
      width: 100%;
    }
    td,th{
      border: 1px solid #000;
      padding : 5px;
    }

    h3{
      padding: 5px;
    }
  </style>
</head>
<body>


<h3> Booking Count </h3>
  <table style="text-align: center;">
      <tr>
        <td>Total Booking : </td>
        <td><%= bookings.length %> </td>
      </tr>
  </table>

  <h3> Booking List </h3>
  <table>
        <thead>
          <tr>
            <th>Booking No</th>
            <th>Pickup</th>
            <th>Drop</th>
            <th>Customer Id</th>
            <th>Vehicle No</th>
            <th>Driver id</th>
            <th>Fare</th>
            <th>Customer Name</th>
            <th>Booking Status</th>
          </tr>
        </thead>
        <tbody>
          <% if (bookings.length > 0 ) { %>
            <% bookings.forEach(  booking => { %>
            <tr>
              <td align="center"><%= booking.booking_no %> </td>
              <td><%= booking.pickup_from %> </td>
              <td><%= booking.drop_at %> </td>
              <td align="center"><%= booking.customer_id%> </td>
              <td><%= booking.vehicle_no %>
              <td><%= booking.driver_id %> </td>
              <td><%= booking.fare %> </td>
              <td><%= booking.customer_name %> </td>
              <td><%= booking.status %> </td>
            </tr>
            <%});%>
            <%}%>
        </tbody>
      </table>
      <div style="text-align: center;">
        <h3> Thank You . Come Again !</h3>
        <h3></h3>
        <h3>Report Generated At : <%= Time %></h3>
      </div>

</body>
</html>
